{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*",
			"*.js",
			"*.ts",
			"*.tsx",
			"*.json",
			"*.jsonc",
			"!node_modules/**/*",
			"!.next/**/*",
			"!.open-next/**/*",
			"!.wrangler/**/*",
			"!supabase/**/*",
			"!next-env.d.ts",
			"!cloudflare-env.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
